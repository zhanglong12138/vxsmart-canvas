.container{
    height:100%;
    width:100%;
    display:flex;
    background: #f2f2f2;
    position:absolute;
}

.top{
    margin-top:20rpx;
    position:absolute;
    left:0;
    top:0;
    display:flex;
    flex-direction: row;
    align-items: center;
    z-index:2;
}

.return{
    padding:5rpx 10rpx;
    height:18rpx;
    width:10rpx;
    margin-left:15rpx;
    position:relative;
}

.top .color{
    height:20rpx;
    width:20rpx;
    border-radius:10rpx;
    margin-left:15rpx;
    position:relative;
}

.top .color .selected{
    position:absolute;
    left:0;
    top:0;
    height:20rpx;
    width:20rpx;
    display:flex;
    justify-content: center;
    align-items: center;
}

.top .color .selected .circle{
    height:14rpx;
    width:14rpx;
    border-radius:14rpx;
    border:2rpx solid white;

}

.top .color:nth-child(2){
    background: #f92e1d;
}

.top .color:nth-child(3){
    background: #000000;
}

.top .color:nth-child(4){
    background: #0301fc;
}

.top .column{
    height:20rpx;
    width:20rpx;
    margin-left:15rpx;
    display:flex;
    align-items:center;
}

.top .column .son{
    width:20rpx;
    background: #999999;
}

.top .active .son{
    background: #497dea;
}

.bottom{
    padding:0 8rpx;
    position:absolute;
    left:20rpx;
    bottom:20rpx;
    justify-content: space-between;
    display:flex;
    flex-direction: row;
    align-items: center;
    z-index:2;
    box-shadow: 0 0 5rpx #aaaaaa;
    background: white;
    border-radius:5rpx;
}

.bottom .icon{
    height:18rpx;
    width:18rpx;
    padding:12rpx;
    display: flex;
    justify-content: center;
    align-items:center;
}

